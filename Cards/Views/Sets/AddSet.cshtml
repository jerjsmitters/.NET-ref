@model Cards.ViewModels.AddSetViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.Set.UserId)
        <div>
            @Html.LabelFor(m => m.Set.Name)
            @Html.TextBoxFor(m => m.Set.Name)
            @Html.ValidationMessageFor(m => m.Set.Name)
        </div>
        <div>
            @Html.LabelFor(m => m.Set.Description)
            @Html.TextBoxFor(m => m.Set.Description)
            @Html.ValidationMessageFor(m => m.Set.Description)
        </div>
        <div>
            @Html.LabelFor(m => m.Set.Subject.Name)
            @Html.TextBoxFor(m => m.Set.Subject.Name)
            @Html.ValidationMessageFor(m => m.Set.Subject.Name)
        </div>
        <input type="submit" />
    }
</div>

