@model Cards.ViewModels.IndexSetViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h5>@Model.SetCount Available!</h5>
    <a href="@Url.Action("AddSet", "Sets")">Add set</a>
    <ul>
        @foreach (var set in Model.Sets)
        {
            <li>
                <a href="@Url.Action("ShowSet", "Sets", new {SetId = set.SetId})">@set.Name</a>
                (@set.CardCount Cards)
                <a href="@Url.Action("EditSet", "Sets", new {SetId = set.SetId})">Edit</a>
                <a href="@Url.Action("DeleteSet", "Sets", new {SetId = set.SetId})">Delete</a>
            </li>
        }
    </ul>
</div>

